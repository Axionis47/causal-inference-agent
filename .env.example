# Causal Orchestrator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Kaggle API Key (get from https://www.kaggle.com/settings/account)
KAGGLE_KEY=your-kaggle-api-key-here
KAGGLE_USERNAME=your-kaggle-username

# =============================================================================
# GCP SETTINGS (for production deployment)
# =============================================================================

# GCP Project ID
GCP_PROJECT_ID=plotpointe

# GCP Region for Cloud Run
GCP_REGION=us-central1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Backend API URL (for frontend)
VITE_API_URL=http://localhost:8000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum agent iterations
MAX_ITERATIONS=3

# Request timeout in seconds
REQUEST_TIMEOUT=300

# Enable Firestore (set to false for local development without GCP)
USE_FIRESTORE=false

# Local storage path (when USE_FIRESTORE=false)
LOCAL_STORAGE_PATH=./data

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
